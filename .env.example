# Environment Configuration
ENV=development

# Server Configuration
API_PORT=8080
API_HOST=0.0.0.0
WORKER_CONCURRENCY=10

# Database Configuration
DATABASE_URL=postgres://postgres:postgres@localhost:5432/landscaping_dev?sslmode=disable
DATABASE_MAX_CONNECTIONS=25
DATABASE_MAX_IDLE_CONNECTIONS=5
DATABASE_CONNECTION_MAX_LIFETIME=5m

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=168h

# Authentication
BCRYPT_COST=12

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@landscaping-app.com
SMTP_FROM_NAME=Landscaping App

# Storage Configuration (S3 Compatible)
STORAGE_PROVIDER=s3
STORAGE_BUCKET=landscaping-app-dev
STORAGE_REGION=us-east-1
STORAGE_ACCESS_KEY=your-access-key
STORAGE_SECRET_KEY=your-secret-key
STORAGE_ENDPOINT=
STORAGE_PUBLIC_URL=https://your-bucket.s3.amazonaws.com

# Payment Configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# LLM Configuration
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
DEFAULT_LLM_PROVIDER=openai

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_REQUESTS_PER_MINUTE=100
SESSION_SECRET=your-session-secret-key

# Monitoring & Observability
SENTRY_DSN=
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Background Jobs
QUEUE_NAME=default
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=30s

# Multi-tenancy
DEFAULT_TENANT=default
TENANT_ISOLATION_LEVEL=database

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_TWO_FACTOR_AUTH=false

# Development Only
DEBUG_SQL=false
ENABLE_PROFILER=false
MOCK_EXTERNAL_SERVICES=false