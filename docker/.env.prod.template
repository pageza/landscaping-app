# Production Environment Variables Template
# Copy this file to .env.prod and fill in the actual values
# Store sensitive values in Docker secrets instead of environment variables

# Database Configuration
POSTGRES_DB=landscaping_prod
POSTGRES_USER=landscaping_user

# Docker Registry
DOCKER_REGISTRY=your-registry.com/landscaping
IMAGE_TAG=latest

# Logging
LOG_LEVEL=warn

# CORS
CORS_ORIGINS=https://landscaping-app.com,https://api.landscaping-app.com,https://www.landscaping-app.com

# Rate Limiting
RATE_LIMIT_RPS=100
MAX_REQUEST_SIZE=10MB

# Worker Configuration
WORKER_CONCURRENCY=10
QUEUE_NAME=landscaping_jobs

# URLs
API_BASE_URL=https://api.landscaping-app.com
WEB_BASE_URL=https://landscaping-app.com

# External Services (Production)
# These should be stored as Docker secrets in production
# OPENAI_API_KEY=stored-in-secret
# STRIPE_SECRET_KEY=stored-in-secret
# TWILIO_ACCOUNT_SID=stored-in-secret
# TWILIO_AUTH_TOKEN=stored-in-secret

# SSL/TLS
SSL_CERTIFICATE_PATH=./ssl-certs/landscaping-app.com.crt
SSL_PRIVATE_KEY_PATH=./ssl-certs/landscaping-app.com.key

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_RETENTION_WEEKS=4
BACKUP_RETENTION_MONTHS=6
BACKUP_S3_BUCKET=landscaping-backups-prod
BACKUP_S3_REGION=us-east-1