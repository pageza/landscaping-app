# Staging Environment Variables Template
# Copy this file to .env.staging and fill in the actual values

# Database Configuration
POSTGRES_DB=landscaping_staging
POSTGRES_USER=landscaping_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Redis Configuration
REDIS_PASSWORD=CHANGE_ME_STRONG_REDIS_PASSWORD

# Docker Registry
DOCKER_REGISTRY=your-registry.com/landscaping
IMAGE_TAG=staging

# Security (Generate strong secrets!)
JWT_SECRET=CHANGE_ME_STRONG_JWT_SECRET_64_CHARS_MINIMUM
ENCRYPTION_KEY=CHANGE_ME_STRONG_32_CHAR_KEY
SESSION_SECRET=CHANGE_ME_STRONG_SESSION_SECRET

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGINS=https://staging.landscaping-app.com,https://staging-api.landscaping-app.com

# Rate Limiting
RATE_LIMIT_RPS=50
MAX_REQUEST_SIZE=5MB

# Worker Configuration
WORKER_CONCURRENCY=5
QUEUE_NAME=landscaping_jobs_staging

# URLs
API_BASE_URL=https://staging-api.landscaping-app.com
WEB_BASE_URL=https://staging.landscaping-app.com

# Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_ME_STRONG_GRAFANA_PASSWORD

# External Services (Staging)
OPENAI_API_KEY=sk-staging-key
STRIPE_SECRET_KEY=sk_test_staging_key
TWILIO_ACCOUNT_SID=staging_account_sid
TWILIO_AUTH_TOKEN=staging_auth_token

# SSL/TLS
SSL_CERTIFICATE_PATH=./ssl-certs/staging.landscaping-app.com.crt
SSL_PRIVATE_KEY_PATH=./ssl-certs/staging.landscaping-app.com.key