# Landscaping SaaS Platform - Environment Configuration
# Copy this file to .env.dev and customize the values

# ================================
# Database Configuration
# ================================
POSTGRES_DB=landscaping_db
POSTGRES_USER=landscaping_user
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ================================
# Redis Configuration
# ================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# ================================
# Application Configuration
# ================================
APP_ENV=development
APP_PORT=8080
WEB_PORT=8081
APP_DEBUG=true

# ================================
# JWT Configuration
# ================================
# IMPORTANT: Change these in production!
JWT_SECRET=your_jwt_secret_that_should_be_at_least_32_characters_long
JWT_REFRESH_SECRET=your_refresh_secret_that_should_be_at_least_32_characters_long
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ================================
# LLM/AI Configuration (Optional)
# ================================
LLM_PROVIDER=ollama
# For local Ollama (free)
OLLAMA_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama2:7b

# For OpenAI (paid)
# LLM_PROVIDER=openai
# OPENAI_API_KEY=sk-...
# OPENAI_MODEL=gpt-3.5-turbo

# For Anthropic (paid)
# LLM_PROVIDER=anthropic
# ANTHROPIC_API_KEY=...
# ANTHROPIC_MODEL=claude-3-sonnet

# ================================
# Storage Configuration
# ================================
STORAGE_PROVIDER=local
LOCAL_STORAGE_PATH=/app/uploads

# For AWS S3
# STORAGE_PROVIDER=s3
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
# AWS_REGION=us-east-1
# S3_BUCKET=your-bucket-name

# For Cloudflare R2
# STORAGE_PROVIDER=r2
# R2_ACCOUNT_ID=...
# R2_ACCESS_KEY=...
# R2_SECRET_KEY=...
# R2_BUCKET=your-bucket-name

# ================================
# Email Configuration (Optional)
# ================================
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# For SendGrid
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=...

# For Postmark
# EMAIL_PROVIDER=postmark
# POSTMARK_API_KEY=...

# ================================
# SMS Configuration (Optional)
# ================================
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

# ================================
# Payment Configuration (Optional)
# ================================
PAYMENT_PROVIDER=stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ================================
# Security Configuration
# ================================
CORS_ALLOWED_ORIGINS=http://localhost:8081,http://localhost:3000
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m
SESSION_TIMEOUT=24h

# ================================
# Monitoring Configuration
# ================================
LOG_LEVEL=info
METRICS_ENABLED=true
TRACING_ENABLED=false

# ================================
# Development Options
# ================================
AUTO_MIGRATE=true
SEED_DATA=true
HOT_RELOAD=true